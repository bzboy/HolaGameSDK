<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ilong_login_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:background="@drawable/user_center_title_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/title_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:padding="10dp"
                android:src="?attr/sdk_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="?attr/sdk_user_info_title"
                    android:textColor="#303030"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/longyuan_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="?attr/sdk_userinfo_userid"
                    android:textColor="#5f5f5f"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/ilong_text_switch_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:drawableLeft="?attr/sdk_switch_account_ico"
                    android:textColor="?attr/sdk_textColor"
                    android:text="切换账号"
                    android:textSize="14sp" />
                
                <TextView
                    android:id="@+id/ilong_text_update_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户升级"
                    android:textColor="?attr/sdk_textColor"
                    android:textSize="14sp" 
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/close_button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:clickable="true"
                    android:padding="11dp"
                    android:src="@drawable/ilong_hidden_x_image" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="280dp"
                android:layout_height="1px"
                android:background="#D1D1D1" />

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="281" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="140" >

                    <ImageView
                        android:id="@+id/level_tag_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:padding="3dp"
                        android:src="?attr/sdk_userinfo_level_tag_image" />

                    <TextView
                        android:id="@+id/level_tag_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@id/level_tag_image"
                        android:text="等级："
                        android:textColor="#5c5c5c"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/level_text"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@id/level_tag_text"
                        android:background="@drawable/level_bg"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="LV.0"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#D1D1D1" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="140" >

                    <ImageView
                        android:id="@+id/longyuanbi_tag_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:padding="3dp"
                        android:src="?attr/sdk_userinfo_longyuanbi_tag_image" />

                    <TextView
                        android:id="@+id/longyuanbi_tag_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@id/longyuanbi_tag_image"
                        android:text="?attr/sdk_longyuanbi_tag_text"
                        android:textColor="#5c5c5c"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/longyuanbi_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@id/longyuanbi_tag_text"
                        android:gravity="center"
                        android:text="￥0"
                        android:textColor="#FD6A0A"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="280dp"
                android:layout_height="1px"
                android:background="#D1D1D1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/function_layout"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/user_center_layout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/u_user_center_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="个人中心"
                        android:textColor="#303030"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gift_layout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/u_gift_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="礼包"
                        android:textColor="#303030"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forum_layout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/u_forum_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="论坛"
                        android:textColor="#303030"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/help_layout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/u_help_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="帮助"
                        android:textColor="#303030"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/active_layout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/u_activie_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="活动"
                        android:textColor="#303030"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sign_layout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/u_sign_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="消息"
                        android:textColor="#303030"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>