<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/ilong_login_bg"
 >

    <LinearLayout
        android:layout_width="320dip"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="31dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="?attr/sdk_logo" />

            <TextView
                android:id="@+id/ilong_regist_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageView1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="手机号注册"
                android:textColor="?attr/sdk_textColor"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ilong_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ilong_close" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="?attr/sdk_buttom_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ilong_reg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="?attr/sdk_ilong_radius_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/ilong_reg_name_rl"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/name_icon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="?attr/sdk_phone_ico" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/name_icon"
                        android:background="#bdbdbd" />

                    <EditText
                        android:id="@+id/ilong_reg_usernme"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="1px"
                        android:layout_toRightOf="@id/name_icon"
                        android:background="@null"
                        android:hint="请输入手机号"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?attr/sdk_buttom_line" />

                <RelativeLayout
                    android:id="@+id/ilong_regist_code_rl"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/p_icon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="?attr/sdk_verification_code" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/p_icon"
                        android:background="#bdbdbd" />

                    <EditText
                        android:id="@+id/v_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="1px"
                        android:layout_toRightOf="@id/p_icon"
                        android:background="@null"
                        android:gravity="center_vertical|left"
                        android:hint="输入验证码"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="16"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/get_verif_button"
                        style="@style/ilong_btn_go_into"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?attr/sdk_buttom_line" />

                <RelativeLayout
                    android:id="@+id/ilong_reg_pwd_rl"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/v_icon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="?attr/sdk_p_lock" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/v_icon"
                        android:background="#bdbdbd" />

                    <EditText
                        android:id="@+id/ilong_reg_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="1px"
                        android:layout_toRightOf="@id/v_icon"
                        android:background="@null"
                        android:hint="输入密码"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/ilong_close_eye_bt"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ilong_close_eye"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" 
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
              android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册即同意"
                    android:textColor="?attr/sdk_textColor"
                    />
                <TextView 
                    android:id="@+id/regist_user_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="《用户协议》"
                    android:textColor="?attr/sdk_regist_user_protocol"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/ilong_onkey_regist_finished"
                style="@style/ilong_btn_go_into"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="立 即 注 册 " />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <LinearLayout
                    android:id="@+id/ilong_regist_back_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ilong_regist_left_arrow"
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:src="?attr/sdk_regist_left_arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_marginLeft="10dp"
                        android:focusable="true"
                        android:gravity="center_vertical|left"
                        android:text="返回登录"
                        android:textColor="?attr/sdk_textColor" />
                </LinearLayout>

                <Button
                    android:id="@+id/ilong_regist_username"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:focusable="true"
                    android:gravity="center|right"
                    android:paddingLeft="10dp"
                    android:text="用户名注册"
                    android:textColor="?attr/sdk_textColor" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>